<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_daily_weather_card_item"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="105dp"
        app:cardCornerRadius="10dp"
        android:elevation="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/card_forecast_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forecast Day" />

            <TextView
                android:id="@+id/card_forecast_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day Temp" />

            <TextView
                android:id="@+id/card_forecast_con"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day Conditions" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>